{
  "auth": {
    "identityProviders": {
      "azureActiveDirectory": {
        "registration": {
          "openIdIssuer": "https://login.microsoftonline.com/b054a3b7-3fad-4666-a7d7-44a8add4a68c/v2.0",
          "clientId": "27d2b98a-bf4b-4c26-aa07-afda5c43cd47"
        }
      }
    }
  },
  "routes": [
    {
      "route": "/login",
      "redirect": "/.auth/login/aad?post_login_redirect_uri=/"
    },
    {
      "route": "/logout",
      "redirect": "/.auth/logout"
    },
    {
      "route": "/",
      "allowedRoles": ["authenticated"],
      "rewrite": "/index.html"
    },
    {
      "route": "/*",
      "allowedRoles": ["authenticated"]
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/.auth/*"]
  },
  "runtime": {
    "tokenStoreEnabled": true,
    "cookieExpirationInDays": 1
  }
}
